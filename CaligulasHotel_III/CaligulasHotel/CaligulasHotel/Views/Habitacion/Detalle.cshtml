@model CaligulasHotel.Models.Entity.HabitacionEntity

@{
    ViewBag.Title = "Detalle Habitación";
}


<div class="row">
    <div class="cell-12 mt-4">
        <h2 class="display2 text-light text-upper">@ViewBag.Title</h2>
    </div>
    <div class="cell-12 mb-4">
        @Html.ActionLink("VOLVER", "Index", "Habitacion", new { }, new { @class = "button" })
    </div>
    <div class="cell-md-8 cell-sm-12">
        <div class="panel border" data-role="panel">
            <h3 class="text-light display2">@Html.DisplayFor(x => x.Nombre)</h3>
            <hr />
            <dl>
                <dt>NUMERO DE PERSONAS</dt>
                <dd>@Html.DisplayFor(x => x.NumeroPersonas) persona(s) por habitación</dd>
                <dt>DESCRIPCION</dt>
                <dd>@Html.DisplayFor(x => x.Descripcion)</dd>
                <dt>PRECIO POR NOCHE</dt>
                <dd><span class="mif-dollar2"></span> @Html.DisplayFor(x => x.PrecioNoche)</dd>
                <dt>NUMERO DE HABITACIONES DISPONIBLES</dt>
                <dd>@Html.DisplayFor(x => x.HabitacionesDisponibles)</dd>
                <dt>SERVICIOS DE HABITACION</dt>
                <dd>
                    <ul class="unstyled-list">
                        @foreach (var servicio in Model.ServiciosHabitacion.Split(','))
                        {
                            <li><span class="mif-star-full icon fg-yellow"></span> <span class="text-light">@servicio</span></li>
                        }
                    </ul>
                </dd>
                <dt>TIPO DE HABITACION</dt>
                <dd>@Html.DisplayFor(x => x.TipoHabitacion.Nombre)</dd>
            </dl>
            <hr />
            @if (Request.IsAuthenticated)
            {
                <a href="@Url.Action("Reserva","Habitacion",new { id=Model.HabitacionId })" class="button large success"><span class="mif-paper-plane"></span> RESERVAR</a>
            }
            else
            {
                <a href="@Url.Action("Login","Account",new { returnUrl = HttpContext.Current.Request.Url.AbsolutePath })" class="button large"><span class="mif-vpn-lock"></span> INICIAR SESIÓN</a>
            }
        </div>
    </div>
    <div class="cell-md-4 cell-sm-12">
        <div class="img-container text-center rounded selected thumbnail image-overlay">
            <img src="~/Uploads/@Model.ImageUrl" class="img-fluid" />
            <div class="op-amber image-overlay">
                <h1 class="display2">@Html.DisplayFor(x => x.Nombre)</h1>
            </div>
        </div>
    </div>
</div>
