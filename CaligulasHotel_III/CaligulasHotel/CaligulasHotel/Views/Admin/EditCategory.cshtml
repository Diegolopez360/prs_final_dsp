@model CaligulasHotel.Models.ViewModel.CategoriaViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Editar Categoría";
}

<h2 class="display2 text-light text-upper">@ViewBag.Title</h2>

<div class="row">
    <div class="cell-12 mx-0 px-0">
        <ul class="breadcrumbs">
            <li class="page-item"><a href="@Url.Action("Categoria","Admin",new { })" class="page-link">CATEGORÍAS</a></li>
            <li class="page-item"><a href="#" class="page-link">NUEVA CATEGORÍA</a></li>
        </ul>
    </div>
    <div class="cell-md-6 cell-sm-12">
        @using (Html.BeginForm("CreateCategory", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(x => x.CategoriaId)
            <div class="form-group">
                @Html.LabelFor(x => x.Nombre)
                @Html.TextBoxFor(x => x.Nombre)
                @Html.ValidationMessageFor(x => x.Nombre, null, new { @class = "fg-red" })
            </div>
            <div class="form-group">
                <button type="submit" class="button primary"><span class="mif-floppy-disk"></span> GUARDAR</button>
            </div>
        }
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}