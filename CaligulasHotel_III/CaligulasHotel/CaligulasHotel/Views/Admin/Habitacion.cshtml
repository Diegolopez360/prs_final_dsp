@model ICollection<CaligulasHotel.Models.Entity.HabitacionEntity>

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Habitaciones";
}

<h2 class="display2 text-light text-upper">@ViewBag.Title</h2>
@if (ViewBag.Message != null)
{
    <div class="row my-5">
        <div class="cell-12">
            <div class="bg-green fg-white text-upper win-shadow" data-role="panel">@ViewBag.Message</div>
        </div>
    </div>
}
<div class="d-block mb-5 text-right">
    <a href="@Url.Action("CreateHabitacion","Admin",new { })" class="button success drop-shadow"><span class="mif-plus icon"></span> AGREGAR</a>
</div>
<div class="row my-5">
    <div class="cell-md-8 search-wrapper"></div>
    <div class="cell-md-4 rows-wrapper"></div>
</div>
<div class="row">
    <div class="cell-12">
        <table class="table table-border striped" data-role="table" data-table-info-title="Mostrando $1 de $2 registros" data-search-wrapper=".search-wrapper" data-rows-wrapper=".rows-wrapper">
            <thead>
                <tr>
                    <th data-sortable="true">NOMBRE</th>
                    <th data-sortable="true">NUMERO DE PERSONAS</th>
                    <th data-sortable="true">TIPO DE HABITACION</th>
                    <th data-sortable="true">HABITACIONES DISPONIBLES</th>
                    <th data-sortable="true">PRECIO POR NOCHE</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var habitacion in Model)
                {
                    <tr>
                        <td>@habitacion.Nombre</td>
                        <td>@habitacion.NumeroPersonas</td>
                        <td>@habitacion.TipoHabitacion.Nombre</td>
                        <td>@habitacion.HabitacionesDisponibles</td>
                        <td>@habitacion.PrecioNoche</td>
                        <td>
                            <a href="@Url.Action("EditHabitacion","Admin",new { id=habitacion.HabitacionId})" class="button small success"><span class="mif-pencil icon"></span></a>
                            <a href="@Url.Action("DeleteHabitacion","Admin",new { id=habitacion.HabitacionId})" class="button small alert"><span class="mif-bin icon"></span></a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>