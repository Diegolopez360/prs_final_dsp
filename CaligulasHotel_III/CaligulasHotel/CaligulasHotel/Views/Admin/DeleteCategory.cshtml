@model CaligulasHotel.Models.ViewModel.CategoriaViewModel

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
    ViewBag.Title = "Eliminar Categoría";
}

<h2 class="display2 text-light text-upper">@ViewBag.Title</h2>

<div class="row">
    <div class="cell-12 px-0">
        <ul class="breadcrumbs">
            <li class="page-item"><a href="@Url.Action("Categoria","Admin",new { })" class="page-link">CATEGORÍAS</a></li>
            <li class="page-item"><a href="#" class="page-link">ELIMINAR CATEGORÍA</a></li>
        </ul>
    </div>
    <div class="cell-md-6 cell-sm-12">
        <div class="panel border bd-red win-shadow" data-role="panel">
            <h3>¿Esta Seguro de Eliminar el Registro?</h3>
            <dl>
                <dt>ROWID</dt>
                <dd>@Html.DisplayFor(x => x.CategoriaId)</dd>
                <dt>NOMBRE</dt>
                <dd>@Html.DisplayFor(x => x.Nombre)</dd>
            </dl>
        </div>
        @using (Html.BeginForm("DeleteCategoryPost", "Admin", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            <div class="form-group">
                @Html.HiddenFor(x => x.CategoriaId)
            </div>
            <div class="form-group">
                <button type="submit" class="button alert"><span class="mif-bin icon"></span> ELIMINAR</button>
            </div>
        }
    </div>
</div>