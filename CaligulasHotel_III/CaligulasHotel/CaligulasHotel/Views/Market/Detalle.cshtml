@model CaligulasHotel.Models.Entity.ArticuloEntity

@{
    ViewBag.Title = "Detalle Artículo";
}

<div class="row">
    <div class="cell-12 mt-4">
        <h1 class="display2 text-light text-upper">@ViewBag.Title</h1>
    </div>
</div>
<div class="row flex-align-center h-vh-100">
    <div class="cell-6 text-center">
        <div class="img-container">
            <img src="~/Uploads/@Model.ImageUrl" class="w-75" />
        </div>
    </div>
    <div class="cell-6">
        <h1 class="display1 text-light text-upper">@Html.DisplayFor(x => x.Nombre)</h1>
        <div class="text-bold text-small">@Html.DisplayFor(x => x.SKU)</div>
        <p>@Html.DisplayFor(x => x.Descripcion)</p>
        <div class="text-light text-upper">marca# @Html.DisplayFor(x => x.Marca.Nombre)</div>
        <div class="text-light text-upper">categoría# @Html.DisplayFor(x => x.Marca.Nombre)</div>
        <div class="text-light text-upper">stock# @Html.DisplayFor(x => x.Stock)</div>
        <hr />
        <h1 class="header text-light text-upper">agregar al carrito de compras</h1>
        @using (Html.BeginForm("ItemShoppingCart", "Market", FormMethod.Post))
        {
            @Html.AntiForgeryToken()
            @Html.Hidden("ArticuloId", Model.ArticuloId)
            <div class="form-group">
                @Html.Label("", "Número de Artículos")
                @Html.TextBox("NumeroArticulos", "", new { @type = "number", required = "", max = Model.Stock, min = 1 })
            </div>
            <div class="form-group">
                <button type="submit" class="button small primary">AGREGAR</button>
            </div>
        }
    </div>
</div>